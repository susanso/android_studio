<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity" android:orientation="vertical" android:id="@+id/main">
    <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="300dp"
            android:id="@+id/profile"
            android:background="#CCEEFF">
        <com.mikhaellopez.circularimageview.CircularImageView
                android:layout_width="224dp" android:layout_height="215dp"
                android:src="@drawable/cat"
                app:civ_border_color="#EEEEEE"
                app:civ_border_width="4dp"
                app:civ_shadow="true"
                app:civ_shadow_radius="10"
                app:civ_shadow_color="#8BC34A" tools:srcCompat="@tools:sample/avatars"
                android:id="@+id/picture"
                android:layout_gravity="center"/>
        <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent" android:id="@+id/profile1">
            <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" android:id="@+id/textDay"
                    android:textAlignment="center"
                    android:textSize="50dp"/>
        </LinearLayout>
    </LinearLayout>
    <Button
            android:text="@string/menu1"
            android:layout_width="match_parent"
            android:layout_height="match_parent" android:id="@+id/feed" android:layout_weight="1"
            android:background="@drawable/cardview_layout"/>
    <Button
            android:text="@string/menu2"
            android:layout_width="match_parent"
            android:layout_height="match_parent" android:id="@+id/log" android:layout_weight="1"
            android:background="@drawable/cardview_layout"/>
    <Button
            android:text="@string/menu3"
            android:layout_width="match_parent"
            android:layout_height="match_parent" android:id="@+id/foodInfo" android:layout_weight="1"
            android:background="@drawable/cardview_layout"/>
    <Button
            android:text="@string/menu4"
            android:layout_width="match_parent"
            android:layout_height="match_parent" android:id="@+id/map" android:layout_weight="1"
            android:background="@drawable/cardview_layout"/>
</LinearLayout>