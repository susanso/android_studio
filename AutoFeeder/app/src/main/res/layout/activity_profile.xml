<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              xmlns:tools="http://schemas.android.com/tools"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical"
              tools:context=".MainActivity">

    <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1">

        <android.support.constraint.ConstraintLayout
                android:background="@drawable/cardview_layout"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

            <com.mikhaellopez.circularimageview.CircularImageView
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:layout_marginStart="8dp"
                    android:layout_marginBottom="8dp"
                    app:civ_border_color="#EEEEEE"
                    app:civ_border_width="4dp"
                    app:civ_shadow="true"
                    app:civ_shadow_color="#8BC34A"
                    app:civ_shadow_radius="10"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" android:id="@+id/profile" android:layout_marginEnd="8dp"
                    app:layout_constraintHorizontal_bias="0.0"
                    android:layout_marginTop="8dp" app:layout_constraintEnd_toStartOf="@+id/guideline"/>
            <Button
                    android:text="프로필 수정"
                    android:layout_width="wrap_content"
                    android:layout_height="36dp"
                    android:id="@+id/profileEdit"
                    android:background="@drawable/button_layout"
                    android:layout_marginTop="8dp"
                    app:layout_constraintTop_toBottomOf="@+id/textName"
                    app:layout_constraintStart_toStartOf="@+id/textName"
                    app:layout_constraintEnd_toEndOf="@+id/textName"/>
            <TextView
                    android:text="닉네임"
                    android:textSize="20dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/textName" android:layout_marginTop="8dp"
                    app:layout_constraintTop_toTopOf="parent" android:layout_marginBottom="8dp"
                    app:layout_constraintBottom_toBottomOf="parent" android:layout_marginEnd="8dp"
                    app:layout_constraintEnd_toEndOf="parent" app:layout_constraintStart_toEndOf="@+id/profile"
                    android:layout_marginStart="8dp" app:layout_constraintHorizontal_bias="0.503"
                    app:layout_constraintVertical_bias="0.39"/>
            <android.support.constraint.Guideline android:layout_width="wrap_content"
                                                  android:layout_height="wrap_content" android:id="@+id/guideline"
                                                  android:orientation="vertical"
                                                  app:layout_constraintGuide_percent="0.50121653"/>
        </android.support.constraint.ConstraintLayout>

    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
    >

        <android.support.constraint.ConstraintLayout
                android:background="@drawable/cardview_layout"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="D-day"
                    android:textColor="#F7819F"
                    android:textSize="30dp"
                    app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp"
                    android:layout_marginTop="8dp" app:layout_constraintTop_toTopOf="parent"
                    android:id="@+id/textView11" android:layout_marginBottom="8dp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintVertical_bias="0.39" android:layout_marginEnd="8dp"
                    app:layout_constraintEnd_toEndOf="parent" app:layout_constraintHorizontal_bias="0.17"/>
            <TextView
                    android:text="일"
                    android:textColor="#F7819F"
                    android:textSize="30dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/textDay"
                    app:layout_constraintTop_toTopOf="@+id/textView11" android:layout_marginEnd="8dp"
                    app:layout_constraintEnd_toEndOf="parent" app:layout_constraintStart_toEndOf="@+id/textView11"
                    android:layout_marginStart="8dp"/>
            <TextView
                    android:text="2019. 5. 8"
                    android:textStyle="bold"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/textDate"
                    app:layout_constraintBottom_toBottomOf="parent" android:layout_marginEnd="8dp"
                    app:layout_constraintEnd_toEndOf="@+id/textDay" app:layout_constraintTop_toBottomOf="@+id/textDay"
                    app:layout_constraintVertical_bias="0.407"
                    app:layout_constraintHorizontal_bias="0.502"
                    app:layout_constraintStart_toStartOf="@+id/textDay" android:layout_marginStart="8dp"/>
        </android.support.constraint.ConstraintLayout>

    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1">
        <android.support.constraint.ConstraintLayout
                android:background="@drawable/cardview_layout"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

            <TextView
                    android:text="생년월일"
                    android:textSize="18dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" android:id="@+id/textView5"
                    android:layout_marginTop="8dp"
                    app:layout_constraintStart_toStartOf="@+id/textFeedAmount"
                    app:layout_constraintEnd_toEndOf="@+id/textFeedAmount" android:layout_marginBottom="8dp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintVertical_bias="0.0" app:layout_constraintTop_toBottomOf="@+id/textView2"
                    android:layout_marginStart="8dp" android:layout_marginEnd="8dp"/>
            <TextView
                    android:text="몸무게"
                    android:textSize="18dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" android:id="@+id/textView2"
                    android:layout_marginTop="8dp"
                    app:layout_constraintStart_toStartOf="@+id/textFeedAmount" android:layout_marginEnd="8dp"
                    app:layout_constraintEnd_toEndOf="@+id/textFeedAmount" android:layout_marginBottom="8dp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintVertical_bias="0.0" app:layout_constraintTop_toBottomOf="@+id/textFeedAmount"
                    android:layout_marginStart="8dp"/>
            <TextView
                    android:text="하루권장사료양"
                    android:textSize="18dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" android:id="@+id/textFeedAmount"
                    app:layout_constraintStart_toStartOf="parent" android:layout_marginTop="8dp"
                    app:layout_constraintEnd_toEndOf="parent" app:layout_constraintTop_toTopOf="parent"
                    android:layout_marginBottom="8dp" app:layout_constraintBottom_toBottomOf="parent"
                    android:layout_marginStart="8dp" android:layout_marginEnd="8dp"
                    app:layout_constraintVertical_bias="0.3" app:layout_constraintHorizontal_bias="0.15"/>
            <TextView
                    android:text="g"
                    android:textSize="18dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/textAmount"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:layout_marginEnd="8dp"
                    android:layout_marginStart="8dp"
                    app:layout_constraintTop_toTopOf="@+id/textFeedAmount"
                    app:layout_constraintBottom_toBottomOf="@+id/textFeedAmount"
                    app:layout_constraintStart_toEndOf="@+id/textFeedAmount"
                    app:layout_constraintHorizontal_bias="0.55"/>
            <TextView
                    android:text="g"
                    android:textSize="18dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/textWeight"
                    app:layout_constraintEnd_toEndOf="@+id/textAmount"
                    android:layout_marginEnd="8dp"
                    android:layout_marginTop="8dp" app:layout_constraintTop_toBottomOf="@+id/textAmount"
                    app:layout_constraintStart_toStartOf="@+id/textAmount" android:layout_marginStart="8dp"/>
            <TextView
                    android:textSize="18dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/textWeight2"
                    android:visibility="invisible"
                    app:layout_constraintBottom_toTopOf="@+id/textBDay2"
                    app:layout_constraintTop_toTopOf="@+id/textWeight" app:layout_constraintVertical_bias="0.0"
                    app:layout_constraintStart_toEndOf="@+id/textWeight" android:layout_marginStart="32dp"/>
            <TextView
                    android:text="2018. 1. 1"
                    android:textSize="18dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/textBirthday"
                    app:layout_constraintEnd_toEndOf="@+id/textAmount"
                    android:layout_marginEnd="8dp"
                    android:layout_marginTop="8dp" app:layout_constraintTop_toBottomOf="@+id/textWeight"
                    app:layout_constraintStart_toStartOf="@+id/textAmount" android:layout_marginStart="8dp"/>
            <TextView
                    android:text="2296"
                    android:textSize="18dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/textBDay2"
                    android:visibility="invisible"
                    app:layout_constraintTop_toTopOf="@+id/textBirthday"
                    app:layout_constraintBottom_toBottomOf="@+id/textBirthday"
                    app:layout_constraintStart_toEndOf="@+id/textBirthday" android:layout_marginStart="8dp"/>
        </android.support.constraint.ConstraintLayout>
    </android.support.v7.widget.CardView>
</LinearLayout>